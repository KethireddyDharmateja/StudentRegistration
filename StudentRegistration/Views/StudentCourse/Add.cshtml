@model StudentRegistration.Models.SCViewModel

@{
    ViewBag.Title = "Add Student Course";
}

<h2>Add Student Course</h2>

@using (Html.BeginForm("Add", "StudentCourse", FormMethod.Post))
{
    <div class="form-group">
        <label for="Students_Id" class="control-label">Student Name</label>
        @Html.DropDownListFor(model => model.Students.Id, (SelectList)ViewBag.Students, "Select a Student", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Courses_Id" class="control-label">Course Name</label>
        @Html.DropDownListFor(model => model.Courses.Id, (SelectList)ViewBag.Courses, "Select a Course", new { @class = "form-control" })
    </div>

    <input type="submit" value="Add" class="btn btn-primary" />
}
